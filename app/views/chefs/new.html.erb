<div class="row my-5">
    <div class="col-md-6 offset-md-3">
        <%= render 'shared/errors', obj:@chef %>

        <div class="card">
            <div class="card-body">
                <%= form_for @chef do |f| %>
                <div class="form-group">
                    <%= f.text_field :chefname, class:"form-control form-control-lg", placeholder:"Name"%>
                </div>
                <div class="form-group">
                    <%= f.email_field :email, class:"form-control form-control-lg", placeholder:"Email address"%>
                </div>
                <div class="form-group">
                    <%= f.password_field :password, class:"form-control form-control-lg", placeholder:"Password"%>
                </div>
                <div class="form-group">
                    <%= f.password_field :password_confirmation, class:"form-control form-control-lg", placeholder:"Type Password Again"%>
                </div>

                <%
=begin%>
                <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
                <div class="text-center mt-3">
                    <a href="#" class="text-primary">Forgot Password?</a>
                </div>
                <hr>
                <%
=end%>
                <div class="text-center my-3">
                    <%= f.submit 'Create New Account', class:"btn btn-lg btn-success w-50" %>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</div>