<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2 class="mt-3 line">All Chefs</h2>
        <%= will_paginate list_classes: %w(pagination justify-content-center mt-2)%>
        <% @chefs.each do |chef|%>
        <div class="row border-bottom m-3">
            <div class="col-md-2 my-3 text-right">
                <%= link_to gravatar_for(chef), chef_path(chef) %>
            </div>
            <div class="col-md-4 ml-5 my-3 chef-name">
                <h4 class="name"> <%= link_to chef.chefname, chef_path(chef) %></h4>
                <p><%= pluralize(chef.recipes.count, "recipe") if chef.recipes %></p>
                <% if logged_in? && current_chef %>
                <%= link_to 'delete this chef', chef_path(chef), method: :delete, data: {confirm: 'Are you sure? Your account and your recipes will be deleted'}, class:"small text-secondary text-uppercase" %>
                <% end %>
            </div>

        </div>


        <% end %>
        <%= will_paginate list_classes: %w(pagination justify-content-center mt-2)%>
    </div>
</div>