 <div class="card">
     <div class="card-body">
         <%= form_for :session, url: login_path do |f| %>
         <div class="form-group">
             <%= f.email_field :email, class:"form-control form-control-lg", placeholder:"Email address"%>
         </div>
         <div class="form-group">
             <%= f.password_field :password, class:"form-control form-control-lg", placeholder:"Password"%>
         </div>
         <div class="text-center my-3">
             <%= f.submit 'Log In', class:"btn btn-lg btn-success w-50" %>
         </div>
         <% end %>
         <hr>
         <div class="text-center my-3">
             <%= link_to "Register", signup_path, class: "btn btn-lg btn-danger" %>
         </div>

     </div>
 </div>