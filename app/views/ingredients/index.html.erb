<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2 class="mt-3 line">All Ingredients</h2>
        <%= will_paginate list_classes: %w(pagination justify-content-center mt-2)%>
        <% @ingredients.each do |ingredient|%>
        <div class="row border-bottom m-3">
            <div class="col-md-6 ml-5 my-3 chef-name">
                <h4 class="name"> <%= link_to ingredient.name, ingredient_path(ingredient) %></h4>
                <p><%= pluralize(ingredient.recipes.count, "recipe") if ingredient.recipes %></p>
                <% if logged_in? && current_chef.admin? %>
                <%= link_to 'edit this ingredient', edit_ingredient_path(ingredient), class:"small text-secondary text-uppercase" %>
                <% end %>
            </div>

        </div>


        <% end %>
        <%= will_paginate list_classes: %w(pagination justify-content-center mt-2)%>
    </div>
</div>